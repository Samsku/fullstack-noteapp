{
  "name": "note-app",
  "version": "1.0.0",
  "type": "module",
  "description": "backend for note-app",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development node --watch index.js",
    "test": "cross-env NODE_ENV=test node --test",
    "build:ui": "rimraf dist && npm run build --prefix .. && xcopy /E /I ..\\dist .\\dist",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push",
    "lint": "eslint ."
  },
  "keywords": [
    "note-app",
    "backend"
  ],
  "author": "Samsku",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^8.19.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.5.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "supertest": "^7.1.4"
  }
}
